  <script>
    // small demo countdown to next day midnight
    function updateCountdown(){
      const now=new Date();
      const t=new Date();t.setHours(23,59,59,999);
      const diff=Math.max(0,t-now);
      const h=Math.floor(diff/3600000);const m=Math.floor(diff%3600000/60000);const s=Math.floor(diff%60000/1000);
      document.getElementById('countdown').innerHTML=`<div class=\"seg\"><div style=\"font-size:18px\">${String(h).padStart(2,'0')}</div><div class=\"muted\" style=\"font-size:11px\">Jam</div></div><div class=\"seg\"><div style=\"font-size:18px\">${String(m).padStart(2,'0')}</div><div class=\"muted\" style=\"font-size:11px\">Menit</div></div><div class=\"seg\"><div style=\"font-size:18px\">${String(s).padStart(2,'0')}</div><div class=\"muted\" style=\"font-size:11px\">Detik</div></div>`
    }
    setInterval(updateCountdown,1000);updateCountdown();
  </script>
